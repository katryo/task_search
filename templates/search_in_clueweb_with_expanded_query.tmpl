{% extends "base.html" %}
{% block results %}
<ul class="unstyled">
  <!--viewで分岐は気持ち悪いけど直すのめんどい-->
  {% for result in results %}
  <h4>{{ result.expanded_query }}</h4>
  <li>
    {% for result_page in result.pages %}
    <ul>
      <li>
        {% for line_cluster in result_page.line_clusters_around_action_word %}
        <ul>
          {% for line in line_cluster %}
          <li>
            <p>
            {{ line }}
            </p>
          </li>
          {% endfor %}
        </ul>
        {% endfor %}
      </li>
    </ul>
    {% endfor %}
  </li>
  {% endfor %}
</ul>
{% endblock %}
